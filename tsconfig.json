{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": false,  // TODO: True
    "noUnusedParameters": false,  // TODO: True
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h.Fragment"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
